<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.design.widget.TextInputLayout
    android:id="@+id/text_input_layout"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content"
    app:counterEnabled="true"
    app:counterMaxLength="11">

    <EditText
      android:id="@+id/input_phone_number"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="请输入手机号"/>

  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="请输入验证码"/>

  </android.support.design.widget.TextInputLayout>

  <Button
    android:id="@+id/btn_show_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="弹出Dialog"/>

  <com.zhangchao.mybase.test.VerificationEditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:codeBackgroundColor="#FFFFFF"
    app:codeText="获取验证码"
    app:codeTextColor="#000000"
    app:codeWidth="180dp"
    app:codeTextSize="20sp" />

  <com.zhangchao.common.ui.SeatView
    android:id="@+id/seat_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:visibility="gone"/>

  <com.zhangchao.mybase.test.MyView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"/>

</LinearLayout>